{
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "git.inputValidationSubjectLength": 50,
    "git.inputValidationLength": 72,
    "[git-commit]": {
        "editor.rulers": [
            50,
            72,
        ]},
    "[markdown]": {
        "editor.rulers": [80],
    },
    "files.eol": "\n",
    "cSpell.words": [
        "artefacts",
        "Batchelder",
        "gmtime",
        "HOWTO"
    ],
}
